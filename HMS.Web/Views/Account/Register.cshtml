@model HMS.Model.Core.ViewModels.CreateCustomerAccountViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Dashboard/assets/images/favicon.png">
    <title>ورود به سایت</title>
    <link href="~/Dashboard/dist/css/style.min.css" rel="stylesheet">



    <style>

        @@font-face {
            font-family: 'Iran Sans';
            src: url('/fonts/IranSans/IRANSansWeb.eot');
            src: url('/fonts/IranSans/IRANSansWeb.woff') format('woff'), url('/fonts/IranSans/IRANSansWeb.ttf') format('truetype');
        }

        body {
            font-family: 'Iran Sans' !important;
        }
    </style>


</head>
<body>
    <div class="main-wrapper">
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(/Dashboard/assets/images/auth-bg.jpg) no-repeat center center;">
            <div class="auth-box">
                <div id="loginform">
                    <div class="logo">
                        <span class="db"><img src="~/Dashboard/assets/images/logo-icon.png" alt="logo" /></span>
                        <h5 class="font-medium m-b-20">ورود به سایت</h5>
                    </div>
                    <!-- Form -->
                    <div class="row">
                        <div class="col-12">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal m-t-20", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                ;
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @Html.ValidationMessageFor(c => c.FirstName, null, new { @class = "text-danger", style = "float:right;" })
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control form-control-lg", placeholder = "نام", style = "text-align:right;" })
                                </div>

                                @Html.ValidationMessageFor(c => c.LastName, null, new { @class = "text-danger", style = "float:right;" })
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.TextBoxFor(c => c.LastName, new { @class = "form-control form-control-lg", placeholder = "نام خانوادگی", style = "text-align:right;" })
                                </div>

                                @Html.ValidationMessageFor(c => c.Email, null, new { @class = "text-danger", style = "float:right;" })
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
                                    </div>
                                    @Html.TextBoxFor(c => c.Email, new { @class = "form-control form-control-lg", placeholder = "  ایمیل", style = "text-align:right;" })
                                    
                                </div>

                                @Html.ValidationMessageFor(c => c.Password, null, new { @class = "text-danger", style = "float:right;" })
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2"><i class="fas fa-key"></i></span>
                                    </div>
                                    @Html.PasswordFor(c => c.Password, new { @class = "form-control form-control-lg", placeholder = "رمز عبور", style = "text-align:right;" })
                                </div>

                                @Html.ValidationMessageFor(c => c.ConfirmPassword, null, new { @class = "text-danger", style = "float:right;" })
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon2"><i class="fas fa-key"></i></span>
                                    </div>
                                    @Html.PasswordFor(c => c.ConfirmPassword, new { @class = "form-control form-control-lg", placeholder = "تکرار رمز عبور", style = "text-align:right;" })
                                </div>
                                <div class="form-group text-center"  style="margin-bottom: 5px">
                                    <div class="col-xs-12">
                                        <button class="btn btn-block btn-lg btn-info" type="submit">ثبت نام</button>
                                    </div>
                                </div>
                                <div class="form-group m-b-0 m-t-10">
                                    <div class="col-sm-12 text-center">
                                        <a href="/Account/Login" class="text-info m-1-5" style="font-size: 14px"><b>حساب کاربری دارم</b></a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div id="recoverform">
                    <div class="logo">
                        <span class="db"><img src="~/Dashboard/assets/images/logo-icon.png" alt="logo" /></span>
                        <h5 class="font-medium m-b-20">Recover Password</h5>
                        <span>Enter your Email and instructions will be sent to you!</span>
                    </div>
                    <div class="row m-t-20">
                        <!-- Form -->
                        <form class="col-12" action="index.html">
                            <!-- email -->
                            <div class="form-group row">
                                <div class="col-12">
                                    <input class="form-control form-control-lg" type="email" required="" placeholder="Username">
                                </div>
                            </div>
                            <!-- pwd -->
                            <div class="row m-t-20">
                                <div class="col-12">
                                    <button class="btn btn-block btn-lg btn-danger" type="submit" name="action">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Dashboard/assets//jquery.min.js "></script>
    <!-- Bootstrap tether Core JavaScript -->
    <!-- <script src="~/Dashboard/assets/popper.min.js "></script> -->
    <script src="~/Dashboard/assets/bootstrap.min.js "></script>

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('[data-toggle="tooltip "]').tooltip();
        $(".preloader ").fadeOut();</script>
</body>
</html>