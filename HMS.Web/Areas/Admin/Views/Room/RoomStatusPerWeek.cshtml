                    $("#wendsday-date").text(result3.weekHeaderDate[4]);
                    $("#thursday-date").text(result3.weekHeaderDate[5]);
                    $("#friday-date").text(result3.weekHeaderDate[6]);

                    // ================== Set month name =====================
